@model ThunderFireHomeAdmin.Models.ExpandedTypesModel
@{
    ViewBag.Title = "Tipos de Expansao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade" id="modaltipoexpansaotarifa" tabindex="-1" role="dialog" aria-labelledby="attributetypelabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="color:red;float:left"><i class="fa fa-project-diagram" aria-hidden="true"> </i> @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="OPERATION" value="0" />
                <div class="form-group row">
                    <label for="FTIPEXP" class="col-sm-2 control-label form-control-sm">Código Expansão:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-control-sm" id="FTIPEXP" size="8" maxlength="8" disabled>
                    </div>

                    <label for="FLVLREG" class="col-sm-2 col-form-label">Regra:</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.FLVLREG, new SelectList(Model.ListaRegrasExpansao, "KEYCOD", "DSCTAB", Model.FLVLREG), " -- Selecione --", new { @class = "form-control form-control-sm" })
                    </div>

                </div>
                <div class="form-group row">
                    <label for="FDSCEXP" class="col-sm-2 control-label form-control-sm">Descrição:</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control form-control-sm" id="FDSCEXP" size="70" maxlength="70" required>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-check">
                            <input class="form-check-input form-control-sm" type="checkbox" value="" id="FSTAREC" checked>
                            <label class="form-check-label form-control-sm" for="FSTAREC">Ativo</label>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="btn_update">Atualizar</button>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">@ViewBag.Title</h5>
        </div>
        <div class="form-group row">
        </div>
        <button id="btn_add" value="Adicionar" class="btn btn-primary btn-sm" onclick="CallForAdd();"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar</button>
        <hr />
        <div class="card-body">
            <table id="tbtipoexpansaotarifa" class="table-sm table-striped table-bordered dt-responsive nowrap dataTable js-exportable" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>Descrição</th>
                        <th>Por</th>
                        <th>&#160;</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
</div>





@section scripts{
    <script src="~/Scripts/Rules/TiposExpansao.js"></script>
}